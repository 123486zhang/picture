<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/ground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ground"/>
    <TextView
        android:id="@+id/test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="29dp"
        />
    <ImageView
        android:id="@+id/test2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/test1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test2"
        android:layout_marginLeft="70dp"
        android:background="@drawable/a"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test2"
        android:layout_toRightOf="@id/btn1"
        android:layout_marginLeft="90dp"
        android:background="@drawable/b"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test4"
        android:layout_marginLeft="70dp"
        android:background="@drawable/c"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test4"
        android:layout_toRightOf="@id/btn1"
        android:layout_marginLeft="90dp"
        android:background="@drawable/d"/>
    <ImageView
        android:id="@+id/test3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/test1"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/test2"
        android:layout_marginLeft="40dp" />
    <ImageView
        android:id="@+id/test4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/btn1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp" />
    <ImageView
        android:id="@+id/test5"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/btn1"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/test4"
        android:layout_marginLeft="40dp"
        />
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn4"
        android:layout_toRightOf="@id/btn1"
        android:textSize="30dp"
        android:text="主菜单"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mmain"/>
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重听"
        android:textSize="24dp"
        android:textColor="#088696"
        android:layout_above="@id/test3"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/btn1"
        android:layout_marginLeft="140dp"
        android:background="@drawable/replay"/>
    <Button
        android:id="@+id/plus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/btn5"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/plus"
        />
    <TextView
        android:id="@+id/text13"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="     点击更换背景"
        android:textColor="#f4ea2a"
        android:textSize="32dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/plus"
        android:layout_below="@id/btn5"
        />

</RelativeLayout>